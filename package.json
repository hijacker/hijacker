{
  "name": "root",
  "version": "0.0.0",
  "author": "Travis Weidenbenner",
  "homepage": "http://hijacker.io",
  "repository": "https://github.com/travis-w/hijacker",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "clean:node_modules": "rimraf -g ./packages/*/node_modules ./docs/node_modules ./examples/*/node_modules ./node_modules",
    "clean:builds": "rimraf -g ./packages/*/dist",
    "clean:coverage": "rimraf -g ./packages/*/coverage",
    "clean:docs": "rimraf ./docs/.docusaurus",
    "clean:all": "pnpm clean:builds && pnpm clean:coverage && pnpm clean:docs && pnpm clean:node_modules",
    "test": "pnpm --filter=!root --filter=!@docs/* test",
    "build": "pnpm --filter=!root --filter=!@docs/* build",
    "build:docs": "pnpm --filter=@docs/* build",
    "dev:docs": "pnpm --filter=@docs/docs start",
    "changeset": "changeset",
    "ci:publish": "changeset tag && pnpm build && pnpm -r publish --filter=@hijacker/*",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^5.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
