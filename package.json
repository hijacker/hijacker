{
  "name": "root",
  "version": "0.0.0",
  "author": "Travis Weidenbenner",
  "homepage": "http://hijacker.io",
  "repository": "https://github.com/travis-w/hijacker",
  "license": "MIT",
  "private": true,
  "scripts": {
    "commit": "git-cz",
    "clean:node_modules": "rimraf ./**/node_modules",
    "clean:builds": "rimraf ./**/dist",
    "clean:coverage": "rimraf ./**/coverage",
    "clean:docs": "rimraf ./docs/.docusaurus",
    "clean:all": "pnpm clean:builds && pnpm clean:coverage && pnpm clean:docs && pnpm clean:node_modules",
    "test": "pnpm -r --filter=!root --filter=!@docs/* test",
    "build": "pnpm -r --filter=!root --filter=!@docs/* build",
    "build:docs": "pnpm --filter=@docs/* build",
    "dev:docs": "pnpm --filter=@docs/docs start",
    "changeset": "changeset",
    "ci:publish": "changeset tag && pnpm -r publish --filter=@hijacker/*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "^3.3.0",
    "rimraf": "^3.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
