{
  "extends": "@hijacker/tsconfig/base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src/types/*.ts", "src/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "tsconfig.frontend.json"
    }
  ]
}
