{
  "extends": "@hijacker/tsconfig/base.json",
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "src"
  },
  "include": ["src/*.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "ts-node": {
    "esm": true
  },
  "references": [
    {
      "path": "tsconfig.frontend.json"
    }
  ]
}
